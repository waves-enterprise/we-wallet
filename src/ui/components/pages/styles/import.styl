@import './../../../styles/colors.styl';

.import
  width: 100%;
  position: relative;

.topMargin
  margin: 84px 0 40px 0;

.label
  margin-bottom: 7px;

.content
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  text-align: center;
  display: inline-block;
  height: 60%;
  width: 240px;
  margin: auto;

  .importIcon
    margin: -70px auto 0 auto;
    width: 220px;
    height: auto;
    display: block;
    min-height: 200px;
    background-size: contain;

  .importChooser
    border-bottom: 1px solid $accent50;
    padding: 14px 0;

    &:first-child
      padding-top: 0;

    &:last-child
      border-bottom: 0 none;

    button
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      font-family: Roboto;
      background: url(../../../assets/img/arrow-right-14-basic-200.svg) right center no-repeat;
      padding: 0;
      height: 42px;
      width: 100%;

      &:hover
        background: url(../../../assets/img/arrow-right-14-basic-200.svg) right center no-repeat;

      div
        margin: 3px 0;
