@import '../../../../styles/colors.styl'

.networkSettings
  width: 100%;
  height: 600px;
  max-height: 600px;
  min-height: 600px;
  background-color: rgba(0,0,0, 0.2);
  display: flex;
  justify-content: center;
  align-content: space-between;
  align-items: center;
  flex-direction: column;

.contentBox
  background: $white;
  padding: 24px;
  margin: 40px;
  border-radius: 4px;
  box-shadow: 0 2px 4px 0 rgba(155, 166, 178, 0.4);


.dotsDivider
  height: 0px;
  margin-bottom: 20px;
  border-bottom: 1px dashed rgba(155, 166, 178, 0.4);

.codeInput
  width: 40px;

.codeInputLabel
  display: inline-block;
  width: 176px;
  margin-left: 12px;
